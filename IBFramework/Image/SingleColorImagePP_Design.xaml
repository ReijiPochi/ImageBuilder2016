<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:IBFramework.Image"
                    xmlns:ibgui="clr-namespace:IBGUI;assembly=IBGUI">

    <Style TargetType="{x:Type local:SingleColorImagePP}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:SingleColorImagePP}">
                    <Grid MinWidth="150" Margin="10,10,10,0">
                        <ibgui:IBFocusableBG/>
                        <StackPanel Width="100" HorizontalAlignment="Left">
                            <ibgui:IBLabel Content="LayerName" Height="22"/>
                        </StackPanel>
                        <StackPanel Margin="100,0,0,0">
                            <ibgui:IBTextBox Text="{Binding LayerName}" Height="20" Padding="0" Margin="0,1,0,1"/>
                        </StackPanel>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>