<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:IBFramework.IBCanvas">

    <Style TargetType="{x:Type local:OverlaySizeGrip}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:OverlaySizeGrip}">
                    <Border Background="#B20068FF"
                            BorderBrush="#B2F900AA"
                            CornerRadius="{Binding R, RelativeSource={RelativeSource TemplatedParent}}"
                            BorderThickness="1">
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
</ResourceDictionary>