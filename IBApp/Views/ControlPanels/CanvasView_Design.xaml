<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:IBApp.Views.ControlPanels"
                    xmlns:ibgui="clr-namespace:IBGUI;assembly=IBGUI"
                    xmlns:ibft="clr-namespace:IBFramework.Timeline;assembly=IBFramework"
                    xmlns:vm="clr-namespace:IBApp.ViewModels.ControlPanels">

    <Style TargetType="{x:Type local:CanvasViewCP}">
        <Setter Property="UseLayoutRounding" Value="True"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:CanvasViewCP}">
                    <Grid>
                        <Grid.DataContext>
                            <vm:CanvasViewVM/>
                        </Grid.DataContext>
                        
                        <ibft:IBCanvas OpenedElements="{Binding Items}" BackgroundColor="{DynamicResource IBDrawingAreaBackgroundColor}"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>